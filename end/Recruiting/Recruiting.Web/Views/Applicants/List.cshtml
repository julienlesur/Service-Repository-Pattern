@model IEnumerable<Applicant>
@{
}



<h2>Current Applicants</h2>

<div class="table-responsive">
    <table class="table table-striped table-dark">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.FulllName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    Last Application
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var applicant in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => applicant.FulllName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => applicant.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => applicant.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => applicant.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => applicant.DisplayApplicationTitle)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
