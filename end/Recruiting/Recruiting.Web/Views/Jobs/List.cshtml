@model IEnumerable<Job>
@{
}

<h2>Current Jobs</h2>

<div class="table-responsive">
    <table class="table table-striped table-dark">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Reference)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Location)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => job.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => job.Reference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => job.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => job.Location)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>